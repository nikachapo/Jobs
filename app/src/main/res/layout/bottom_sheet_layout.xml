<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:layout_marginStart="10dp"
        android:paddingBottom="0dp"
        android:id="@+id/close_bottom_sheet"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/undo_image"
        android:layout_marginTop="10dp" />

    <ScrollView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sheet_dialog_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:transitionName="imagetrans"
                android:id="@+id/sheet_profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/sheet_vacancy_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="თბილისი"

                android:textColor="#043472"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sheet_vacancy_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="ინფორმაციული ტექნოლოგიები"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sheet_vacancy_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ვაკანსია"
                android:textColor="#000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/sheet_vacancy_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="ჯავა დეველოპერი"
                android:textColor="#000"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/sheet_vacancy_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="18-25 წლამდე"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sheet_vacancy_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="ჯავა დეველოპერად მუშაობის დიდი გამოცდილება"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sheet_vacancy_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="10dp"
                android:text="500-1000$"
                android:textColor="#000"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
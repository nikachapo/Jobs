<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vacancy_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_item_profilePicture_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_account_black_24dp"
            android:transitionName="imagetrans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.137" />

        <TextView
            android:id="@+id/list_item_company_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="კომპანია"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_profilePicture_imageView"
            app:layout_constraintVertical_bias="0.64" />

        <TextView
            android:id="@+id/list_item_vacancyName_textView"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:text="ვაკანსია"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toEndOf="@+id/list_item_profilePicture_imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.09" />

        <TextView
            android:id="@+id/list_item_vacancyBody_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_vacancyName_textView"
            android:layout_margin="5dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="ვაკანსია დეტzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzz"
            android:textColor="#4D4B4B"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toEndOf="@+id/list_item_profilePicture_imageView"
            app:layout_constraintTop_toBottomOf="@+id/list_item_vacancyName_textView"
            app:layout_constraintVertical_bias="0.0" />

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/list_item_spark_star_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.984"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.285"
            app:sparkbutton_activeImage="@drawable/active_star"
            app:sparkbutton_iconSize="40dp"
            app:sparkbutton_inActiveImage="@drawable/inactive_star"
            app:sparkbutton_primaryColor="@android:color/holo_orange_dark"
            app:sparkbutton_secondaryColor="@android:color/holo_red_dark">

            <TextView
                android:id="@+id/list_item_city_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:maxLines="1"
                android:text="ქალაქი"
                android:textColor="#0027FF" />
        </com.varunest.sparkbutton.SparkButton>

        <TextView
            android:id="@+id/list_item_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03/12"
            android:textColor="#18C41D"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_spark_star_button"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/list_item_end_date"
            android:layout_width="52dp"
            android:layout_height="17dp"
            android:text="03/12"
            android:textColor="#D50000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.985"
            app:layout_constraintStart_toEndOf="@+id/list_item_start_date"
            app:layout_constraintTop_toBottomOf="@+id/list_item_spark_star_button"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
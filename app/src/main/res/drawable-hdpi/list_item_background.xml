<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
<size
    android:width="300dp"
    android:height="100dp"/>
    <corners
        android:radius="18dp"
        android:topLeftRadius="5dp"
        />
    <gradient
        android:angle="90"
        android:centerX="35%"
        android:centerColor="#CBE9E9E9"
        android:startColor="#BFE9E9E9"
        android:endColor="#D0E9E9E9"
        android:type="linear"
        />

    <stroke
        android:width="2dp"
        android:color="#878787"
        />
</shape>